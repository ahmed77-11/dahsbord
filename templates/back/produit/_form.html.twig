{{ form_start(form) }}
<div class="card shadow mb-5">
    <div class="card-body">
        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Reference</label>
            <div class="col-md-8">
                {{ form_widget(form.reference, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Designation</label>
            <div class="col-md-8">
                {{ form_widget(form.designation, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Prix</label>
            <div class="col-md-8">
                {{ form_widget(form.prix, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Categorie</label>
            <div class="col-md-8">
                {{ form_widget(form.Categorie, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Marque</label>
            <div class="col-md-8">
                {{ form_widget(form.Marque, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="mb-3 row">
            <label class="col-md-2 col-form-label">Image</label>
            <div class="col-md-8">
                {{ form_widget(form.prodImg, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="d-flex justify-content-end" style="margin-right: 212px">
            <button class="btn btn-success mx-4"><i class="bx bx-check-double label-icon"></i> {{ button_label|default('Appliquer') }}</button>
            <a class="btn btn-secondary" href="{{ path('app_back_produit_index') }}">Annuler</a>
        </div>
    </div>
</div>
{{ form_end(form) }}
